<div class="row">
  <div class="col-md-6">
    <h2 class="header-text">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="field-text">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="field-text">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button
          class="btn btn-primary"
          type="submit"
          class="button-text"
        >login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2 class="header-text">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="field-text">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="field-text">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="field-text">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <div class="form-group">
        <button
          class="btn btn-primary"
          type="submit"
          class="button-text"
        >signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>